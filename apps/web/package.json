{
  "name": "@readfort/web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "db:start": "docker-compose -f ./dev/docker-compose.yml up -d",
    "dev:next": "next dev --port 3000",
    "dev:ssl": "local-ssl-proxy --config ./dev/ssl/config.json",
    "dev": "pnpm run db:start && pnpm run dev:next",
    "dev:debug": "NODE_OPTIONS='--inspect' pnpm run dev:next",
    "build": "next build",
    "start": "next start",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "tc": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "db:generate": "drizzle-kit generate",
    "db:generate:custom": "pnpm run db:generate --custom",
    "db:migrate": "drizzle-kit migrate --config=./drizzle.config.ts",
    "db:migrate:test": "NODE_ENV=test pnpm run db:migrate",
    "db:drop": "drizzle-kit drop",
    "db:check": "drizzle-kit check"
  },
  "dependencies": {
    "@auth/drizzle-adapter": "^1.1.0",
    "@react-email/components": "0.0.18-canary.0",
    "@readfort/mailers": "workspace:*",
    "@readfort/ui": "workspace:*",
    "@t3-oss/env-nextjs": "^0.10.1",
    "drizzle-orm": "^0.31.2",
    "next": "14.3.0-canary.59",
    "next-auth": "5.0.0-beta.19",
    "nodemailer": "^6.9.13",
    "nodemailer-html-to-text": "^3.2.0",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.11.5",
    "react": "19.0.0-beta-26f2496093-20240514",
    "react-dom": "19.0.0-beta-26f2496093-20240514",
    "slugify": "^1.6.6",
    "zsa": "file:../../../../opensource/zsa/packages/zsa",
    "zsa-react": "file:../../../../opensource/zsa/packages/zsa-react",
    "zod": "^3.23.5"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.1.1",
    "@readfort/eslint": "workspace:*",
    "@readfort/tailwindcss": "workspace:*",
    "@readfort/typescript": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-html-to-text": "^3.1.3",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "drizzle-kit": "^0.22.7",
    "eslint": "^8.57.0",
    "local-ssl-proxy": "^2.0.5",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.3.3"
  }
}
