{
  "name": "@readfort/web",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "db:start": "docker-compose -f ./dev/docker-compose.yml up -d",
    "dev:next": "next dev --port 3000",
    "dev:ssl": "local-ssl-proxy --config ./dev/ssl/config.json",
    "dev": "pnpm run db:start && pnpm run dev:next",
    "dev:debug": "NODE_OPTIONS='--inspect' pnpm run dev:next",
    "build": "next build",
    "start": "ts-node src/index.ts",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "tc": "tsc --noEmit",
    "lint": "eslint . --max-warnings 0",
    "db:generate": "pnpm run typeorm migration:generate -d ./src/db/migrations.config.ts",
    "db:c:migration": "pnpm run typeorm migration:create",
    "db:list": "pnpm run typeorm migration:show -d ./src/db/migrations.config.ts",
    "db:up": "pnpm run typeorm migration:run -d ./src/db/migrations.config.ts",
    "db:down": "pnpm run typeorm migration:revert -d ./src/db/migrations.config.ts",
    "typeorm": "tsx --env-file --tsconfig ./tsconfig.json .env ./node_modules/typeorm/cli.js"
  },
  "dependencies": {
    "@react-email/components": "0.0.18-canary.0",
    "@readfort/mailers": "workspace:*",
    "@readfort/ui": "workspace:*",
    "@t3-oss/env-nextjs": "^0.10.1",
    "dotenv": "^16.3.0",
    "flydrive": "^1.0.2",
    "next": "14.3.0-canary.59",
    "next-auth": "5.0.0-beta.19",
    "nodemailer": "^6.9.13",
    "nodemailer-html-to-text": "^3.2.0",
    "nodemailer-mailgun-transport": "^2.1.5",
    "pg": "^8.4.0",
    "react": "19.0.0-beta-26f2496093-20240514",
    "react-dom": "19.0.0-beta-26f2496093-20240514",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "typeorm": "0.3.20",
    "zod": "^3.23.5",
    "zsa": "file:../../../../opensource/zsa/packages/zsa",
    "zsa-react": "file:../../../../opensource/zsa/packages/zsa-react"
  },
  "devDependencies": {
    "@babel/core": "^7.24.8",
    "@babel/plugin-proposal-decorators": "^7.24.7",
    "@babel/plugin-transform-class-properties": "^7.24.7",
    "@babel/preset-typescript": "^7.24.7",
    "@next/eslint-plugin-next": "^14.1.1",
    "@readfort/eslint": "workspace:*",
    "@readfort/tailwindcss": "workspace:*",
    "@readfort/typescript": "workspace:*",
    "@types/eslint": "^8.56.5",
    "@types/node": "^16.11.10",
    "@types/nodemailer": "^6.4.15",
    "@types/nodemailer-html-to-text": "^3.1.3",
    "@types/pg": "^8.11.6",
    "@types/react": "^18.2.61",
    "@types/react-dom": "^18.2.19",
    "eslint": "^8.57.0",
    "local-ssl-proxy": "^2.0.5",
    "prettier": "^3.2.5",
    "tailwindcss": "^3.4.3",
    "tsx": "^4.16.2",
    "typescript": "^5.3.3"
  }
}
