{
  "extends": "@readfort/typescript/base.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "useDefineForClassFields": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "$ui/*": ["../../packages/ui/src/*"],
      "$base/*": ["./src/*"],
      "$/*": ["./kindle-online/src/*"]
    }
  },
  "include": ["./kindle-online/src", "./src", "../../packages/ui/src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
