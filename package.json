{
  "name": "readfort",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "tc": "turbo tc",
    "prettier": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prettier:check": "prettier --check \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@readfort/eslint": "workspace:*",
    "@readfort/typescript": "workspace:*",
    "prettier": "^3.2.5",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "18.x",
        "react-dom": "18.x",
        "react": "19.x",
        "react-dom": "19.x"
      }
    }
  }
}
